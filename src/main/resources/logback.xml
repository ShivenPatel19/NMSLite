<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--
    NMSLite Logging Configuration

    Controlled by application.conf and system properties set at startup:
    - nmslite.log.level: TRACE, DEBUG, INFO, WARN, ERROR, OFF (default: INFO)
    - nmslite.log.file.path: Log file path (default: logs/nmslite.log)

    To disable logging: Set logging.enabled=false in application.conf
    To disable file logging: Set logging.file.enabled=false in application.conf
    To disable console logging: Set logging.console.enabled=false in application.conf
    -->

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (Single File - No Rotation) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${nmslite.log.file.path:-logs/nmslite.log}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- NULL Appender (for disabling specific appenders) -->
    <appender name="NULL" class="ch.qos.logback.core.helpers.NOPAppender"/>

    <!-- Application logger -->
    <logger name="com.nmslite" level="${nmslite.log.level:-INFO}" additivity="false">
        <appender-ref ref="${nmslite.log.console.appender:-CONSOLE}"/>
        <appender-ref ref="${nmslite.log.file.appender:-FILE}"/>
    </logger>

    <!-- Vert.x logger (less verbose) -->
    <logger name="io.vertx" level="WARN" additivity="false">
        <appender-ref ref="${nmslite.log.console.appender:-CONSOLE}"/>
        <appender-ref ref="${nmslite.log.file.appender:-FILE}"/>
    </logger>

    <!-- Root logger -->
    <root level="${nmslite.log.level:-INFO}">
        <appender-ref ref="${nmslite.log.console.appender:-CONSOLE}"/>
        <appender-ref ref="${nmslite.log.file.appender:-FILE}"/>
    </root>

</configuration>
